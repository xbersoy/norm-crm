<!DOCTYPE html>
<%= content_tag :html do %>
  <%= content_tag :head do %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= favicon_link_tag asset_path("/favicon.ico"), type: "image/x-icon" %>
    <%= content_tag :title, 'Norm CRM' %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "dashboard", media: "all" %>
    <%= javascript_importmap_tags "dashboard" %>
  <% end %>

  <%= content_tag :body, data: { action: action_name, controller: controller_name, path: request.path } do %>
    <%= render 'navbar'%>
    <%= yield %>
    <%= render 'footer'%>
  <% end %>
<% end %>
