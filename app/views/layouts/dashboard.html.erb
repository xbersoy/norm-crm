<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= favicon_link_tag asset_path("/favicon.ico"), type: "image/x-icon" %>
    <title>NormCRM</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "dashboard", media: "all" %>
    <%= javascript_importmap_tags "dashboard" %>
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

  </head>
  <%= content_tag :body, data: { action: action_name, controller: controller_name, path: request.path, controller: "toggle" } do %>
      <%= render 'dashboard/shared/sidebar' %>

      <div class="home">
        <%= render 'dashboard/shared/navbar' %>
        <%= yield %>
      </div>
  <% end %>
</html>
