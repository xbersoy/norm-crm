<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= favicon_link_tag asset_path("/favicon.ico"), type: "image/x-icon" %>
    <title>NormCRM</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "example", media: "all" %>
    <%= javascript_importmap_tags "app" %>

  </head>
  <%= content_tag :body, data: { action: action_name, controller: controller_name, path: request.path, controller: "toggle" } do %>
    <%= render "header" %>
    <%= render "flash" %>

    <%= render "jumbotron" if controller?("examples") %>
    <%= render "breadcrumb" %>

    <%= yield %>

    <%= render "footer" %>
  <% end %>
</html>
