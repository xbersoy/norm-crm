<div class="container position-sticky z-index-sticky top-0">
  <div class="row">
    <div class="col-12">
      <nav class="navbar navbar-expand-lg blur blur-rounded top-0 z-index-fixed shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
        <div class="container-fluid px-0">
          <%= link_to "NormCRM",
              root_path,
              target: "_self",
              rel: "tooltip",
              class:"navbar-brand font-weight-bolder ms-sm-3",
              data: { placement: "bottom" } %>
          <%= button_tag  type: 'button',
                          class: "navbar-toggler shadow-none ms-2",
                          data: { 'bs-toggle': 'collapse', 'bs-target': '#navigation' },
                          aria: { controls: 'navigation', expanded: 'false', label: 'Toggle navigation' } do %>
            <span class="navbar-toggler-icon mt-2">
              <span class="navbar-toggler-bar bar1"></span>
              <span class="navbar-toggler-bar bar2"></span>
              <span class="navbar-toggler-bar bar3"></span>
            </span>
          <% end %>
          <div class="collapse navbar-collapse pt-3 pb-2 py-lg-0 w-100" id="navigation">
            <ul class="navbar-nav navbar-nav-hover ms-lg-12 ps-lg-5 w-100" style="direction: rtl;">
              <li class="nav-item my-auto ms-3 ms-lg-0">
                <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-sm bg-gradient-primary btn-round mb-0 me-1 mt-2 mt-md-0" %>
              </li>
              <li class="nav-item my-auto ms-3 ms-lg-0">
                <%= link_to "Sign In", new_user_session_path, class: "btn btn-sm btn-outline-primary btn-round mb-0 me-1 mt-2 mt-md-0" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>
</div>
